{
  "name": "backend-buddy",
  "version": "1.0.0",
  "description": "Creates backend system using a template JSON.",
  "main": "./bin/index.js",
  "bin": {
    "backend-buddy": "./bin/index.js"
  },
  "scripts": {
    "prepare": "npm install -g .",
    "build": "tsc --build",
    "start": "nodemon --config nodemon.json src/index.ts generate ./example.json",
    "clean": "rimraf ./bin && echo 'All clean now!'",
    "test": "jest --colors",
    "test:verbose": "jest --verbose --colors",
    "test:integration": "rimraf ./test && mkdir test && cd ./test && backend-buddy",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "backend"
  ],
  "author": "Andrew Young",
  "license": "ISC",
  "dependencies": {
    "boxen": "^7.1.0",
    "chalk": "^5.2.0",
    "clui": "^0.3.6",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
